{
  "name": "blog",
  "title": "吃饭不洗...",
  "version": "2.0.0",
  "description": "a github blog template with doddle plugins",
  "main": "index.js",
  "scripts": {
    "pub": "doddle-build pub --template none",
    "start": "doddle-build start --port 8905",
    "dev:ssr": "doddle-build dev --template none",
    "serve": "NODE_ENV=dev nodemon ./server",
    "server": "npm run dev:ssr && NODE_ENV=dev nodemon ./server",
    "client": "NODE_ENV=production pm2 start pm2.json",
    "restart": "pm2 restart blog",
    "update": "git pull && npm i && npm run pub && pm2 restart blog"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/closertb/closertb.github.io.git"
  },
  "homepage": "https://closertb.github.io",
  "keywords": [],
  "author": "doddle",
  "license": "ISC",
  "devDependencies": {
    "@babel/register": "^7.6.2",
    "@doddle/doddle-build": "^1.3.7",
    "@doddle/eslint-config-doddle": "~0.0.13",
    "autoprefixer": "^9.6.1",
    "css-modules-require-hook": "^4.2.3",
    "nodemon": "^1.19.3",
    "postcss-less": "^3.1.4",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "@apollo/client": "^3.1.3",
    "graphql": "^15.3.0",
    "highlight.js": "^10.1.0",
    "koa": "^2.8.1",
    "koa-body": "^4.0.8",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "markdown-it": "^11.0.0",
    "node-fetch": "^2.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router-dom": "^5.1.1"
  },
  "webpack": {
    "copyPublic": true
  }
}
